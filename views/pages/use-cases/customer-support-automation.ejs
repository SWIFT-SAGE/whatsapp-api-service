  const { message, from } = req.body;
  
  // AI-powered intent detection
  const intent = await detectIntent(message.text);
  
  let response;
  
  switch(intent) {
    case 'track_order':
      const orderNumber = extractOrderNumber(message.text);
      const tracking = await getOrderTracking(orderNumber);
      response = `Your order ${orderNumber} is ${tracking.status}. 
                  Estimated delivery: ${tracking.eta}`;
      break;
      
    case 'return_product':
      response = `I'll help you with your return. 
                  Please send your order number and reason for return.`;
      break;
      
    case 'faq':
      response = await getFAQAnswer(message.text);
      break;
      
    default:
      // Transfer to human agent
      await transferToAgent(from, message.text);
      response = `I'll connect you with a support agent. 
                  They'll respond within 2 minutes.`;
  }
  
  // Send response via WhatsApp
  await sendWhatsAppMessage(from, response);
  res.status(200).send('OK');
});</code></pre>
