<!-- Chatbot Section -->
<div id="dashboard-chatbot" class="dashboard-section">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Chatbot Management</h2>
        <button class="btn btn-primary" id="add-chatbot-rule-btn">
            <i class="fas fa-plus me-2"></i>Add Rule
        </button>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Chatbot Rules</h5>
                </div>
                <div class="card-body" id="chatbot-rules">
                    <!-- Chatbot rules will be populated here -->
                    <div class="text-center py-4">
                        <i class="fas fa-robot fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No chatbot rules configured</h5>
                        <p class="text-muted">Create your first chatbot rule to get started</p>
                        <button class="btn btn-primary" id="create-first-rule-btn">
                            <i class="fas fa-plus me-2"></i>Create First Rule
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Test Chatbot</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Type a message..."
                            id="test-message">
                    </div>
                    <button class="btn btn-primary w-100" id="test-chatbot-btn">Test
                        Response</button>
                    <div id="chatbot-response" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>
