                                <pre class="text-light mb-0"><code>// Apex trigger to send WhatsApp message
trigger LeadWhatsAppNotification on Lead (after insert) {
    for (Lead lead : Trigger.new) {
        if (lead.Status == 'New' && lead.Phone != null) {
            HttpRequest req = new HttpRequest();
            req.setEndpoint('https://api.whatsapp-api.com/v1/messages');
            req.setMethod('POST');
            req.setHeader('Authorization', 'Bearer YOUR_API_KEY');
            req.setHeader('Content-Type', 'application/json');
            
            Map<String, Object> payload = new Map<String, Object>{
                'to' => lead.Phone,
                'template' => 'welcome_lead',
                'parameters' => new Map<String, String>{
                    'name' => lead.FirstName,
                    'company' => lead.Company
                }
            };
            
            req.setBody(JSON.serialize(payload));
            Http http = new Http();
            HTTPResponse res = http.send(req);
        }
    }
}</code></pre>
