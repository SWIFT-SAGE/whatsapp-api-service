                                throw new Error(initResponse.error || 'Failed to restart QR generation');
                            }
                            break;
                            
                        case 'initializing':
                        case 'generating':
                        default:
                            // Continue polling
                            if (attempts < maxAttempts) {
                                setTimeout(pollForQRCode, 3000); // Poll every 3 seconds
                            } else {
                                throw new Error('QR code generation timeout after 90 seconds');
                            }
