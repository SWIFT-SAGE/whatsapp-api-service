<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Verification - WhatsApp API Service</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/style.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
        <div class="row w-100">
            <div class="col-md-6 mx-auto">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5 text-center">
                        <% if (success) { %>
                            <div class="mb-4">
                                <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                            </div>
                            <h2 class="text-success mb-3">Email Verified Successfully!</h2>
                            <p class="text-muted mb-4"><%= message %></p>
                            <div class="d-grid gap-2">
                                <button id="goToDashboard" class="btn btn-primary btn-lg">
                                    <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                                </button>
                                <a href="/" class="btn btn-outline-secondary">
                                    <i class="fas fa-home me-2"></i>Back to Home
                                </a>
                            </div>
                        <% } else { %>
                            <div class="mb-4">
                                <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                            </div>
                            <h2 class="text-danger mb-3">Verification Failed</h2>
                            <p class="text-muted mb-4"><%= message %></p>
                            <div class="d-grid gap-2">
                                <a href="/dashboard" class="btn btn-primary btn-lg">
                                    <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                                </a>
                                <a href="/" class="btn btn-outline-secondary">
                                    <i class="fas fa-home me-2"></i>Back to Home
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        <% if (success && authToken) { %>
        // Store the auth token in localStorage for immediate use
        localStorage.setItem('authToken', '<%= authToken %>');
        
        // Handle dashboard redirect
        document.getElementById('goToDashboard').addEventListener('click', function() {
            // Set the Authorization header for the redirect
            fetch('/dashboard', {
                method: 'GET',
                headers: {
                    'Authorization': 'Bearer ' + '<%= authToken %>',
                    'Content-Type': 'application/json'
                }
            }).then(response => {
                if (response.ok) {
                    window.location.href = '/dashboard';
                } else {
                    // If the request fails, try redirecting anyway (cookie should work)
                    window.location.href = '/dashboard';
                }
            }).catch(error => {
                console.error('Error:', error);
                // Fallback: redirect anyway
                window.location.href = '/dashboard';
            });
        });
        <% } else { %>
        // Handle dashboard redirect for failed verification
        document.getElementById('goToDashboard').addEventListener('click', function() {
            window.location.href = '/login';
        });
        <% } %>
    </script>
</body>
</html>
