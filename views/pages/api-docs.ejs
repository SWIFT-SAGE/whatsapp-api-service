<!-- API Documentation Section -->
<div id="dashboard-api-docs" class="dashboard-section">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>API Documentation</h2>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary" id="copy-base-url-btn">
                <i class="fas fa-copy me-2"></i>Copy Base URL
            </button>
            <button class="btn btn-success" id="test-api-btn">
                <i class="fas fa-play me-2"></i>Test API
            </button>
        </div>
    </div>

    <!-- Quick Start -->
    <div class="alert alert-info">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <strong>Base URL:</strong><br>
                <code id="base-url">https://api.messingin.com/v1</code>
            </div>
            <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('base-url')">
                <i class="fas fa-copy"></i>
            </button>
        </div>
    </div>

    <div class="alert alert-warning">
        <i class="fas fa-key me-2"></i>
        <strong>Authentication:</strong> Include your API key in the <code>Authorization</code> header as
        <code>Bearer YOUR_API_KEY</code>
        <% if (user && user.apiKey) { %>
            <br><small class="text-muted">Your API Key:
                <code><%= user.apiKey.substring(0, 8) %>...</code></small>
        <% } else if (user) { %>
            <br><small class="text-muted"><a href="#" onclick="navigateToSection('overview')" class="text-decoration-none">Generate
                    your API key in the overview section</a></small>
        <% } else { %>
            <br><small class="text-muted"><a href="/login" class="text-decoration-none">Login to get
                    your API key</a></small>
        <% } %>
    </div>

    <!-- API Sections -->
    <div class="row g-4">
        <div class="col-lg-8">
            <!-- Authentication -->
            <section id="authentication" class="mb-5">
                <h3><i class="fas fa-key text-warning me-2"></i>Authentication</h3>
                <p>All API requests must include your API key in the Authorization header.</p>
                <div class="card">
                    <div class="card-body">
                        <h6>Header Format:</h6>
                        <pre class="bg-light p-3 rounded"><code>Authorization: Bearer YOUR_API_KEY</code></pre>
                        <div class="alert alert-warning mt-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>Keep your API key secret. Rotate immediately if exposed.
                        </div>
                    </div>
                </div>
            </section>

            <!-- Sessions -->
            <section id="sessions" class="mb-5">
                <h3><i class="fas fa-mobile-alt text-primary me-2"></i>Sessions</h3>
                
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Create Session</h5>
                        <div class="api-endpoint mt-2">
                            <span class="badge bg-success">POST</span>
                            <code>/api/whatsapp/sessions</code>
                        </div>
                    </div>
                    <div class="card-body">
                        <p>Creates a new WhatsApp session and returns a QR code for scanning.</p>
                        
                        <h6>Request Body:</h6>
                        <pre class="bg-light p-3 rounded"><code>{
  "name": "My Session",
  "webhook": "https://your-site.com/webhook"
}</code></pre>

                        <h6>Response:</h6>
                        <pre class="bg-light p-3 rounded"><code>{
  "success": true,
  "data": {
    "sessionId": "session_123",
    "qrCode": "data:image/png;base64,..."
  }
}</code></pre>

                        <h6>cURL Example:</h6>
                        <pre class="bg-dark text-light p-3 rounded"><code>curl -X POST \
  -H "Authorization: Bearer YOUR_API_KEY" \
  -H "Content-Type: application/json" \
  -d '{"name":"My Session"}' \
  https://api.messingin.com/api/whatsapp/sessions</code></pre>
                    </div>
                </div>
            </section>

            <!-- Messages -->
            <section id="messages" class="mb-5">
                <h3><i class="fas fa-comment text-success me-2"></i>Messages</h3>
                
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Send Message</h5>
                        <div class="api-endpoint mt-2">
                            <span class="badge bg-success">POST</span>
                            <code>/api/whatsapp/sessions/{sessionId}/messages</code>
                        </div>
                    </div>
                    <div class="card-body">
                        <p>Sends a WhatsApp message to the specified number.</p>
                        
                        <h6>Parameters:</h6>
                        <ul>
                            <li><code>sessionId</code> (string, required) - Session ID in URL path</li>
                            <li><code>to</code> (string, required) - Recipient phone number</li>
                            <li><code>message</code> (string, required) - Message text</li>
                        </ul>

                        <h6>Request Body:</h6>
                        <pre class="bg-light p-3 rounded"><code>{
  "to": "+1234567890",
  "message": "Hello from WhatsApp API!"
}</code></pre>

                        <h6>cURL Example:</h6>
                        <pre class="bg-dark text-light p-3 rounded"><code>curl -X POST \
  -H "Authorization: Bearer YOUR_API_KEY" \
  -H "Content-Type: application/json" \
  -d '{"to":"+1234567890","message":"Hello World!"}' \
  https://api.messingin.com/api/whatsapp/sessions/session_123/messages</code></pre>
                    </div>
                </div>
            </section>

            <!-- Webhooks -->
            <section id="webhooks" class="mb-5">
                <h3><i class="fas fa-webhook text-info me-2"></i>Webhooks</h3>
                <div class="card">
                    <div class="card-body">
                        <p>Receive real-time message events by configuring webhook URLs in your dashboard.</p>
                        
                        <h6>Supported Events:</h6>
                        <ul>
                            <li><code>message.received</code> - New message received</li>
                            <li><code>message.sent</code> - Message sent successfully</li>
                            <li><code>message.delivered</code> - Message delivered</li>
                            <li><code>session.connected</code> - Session connected</li>
                            <li><code>session.disconnected</code> - Session disconnected</li>
                        </ul>

                        <h6>Sample Webhook Payload:</h6>
                        <pre class="bg-light p-3 rounded"><code>{
  "event": "message.delivered",
  "data": {
    "id": "msg_001",
    "sessionId": "session_123",
    "to": "+1234567890",
    "message": "Hello World!",
    "timestamp": "2025-09-30T01:16:25Z"
  }
}</code></pre>

                        <p class="mt-3">
                            <button class="btn btn-outline-primary" onclick="navigateToSection('webhooks')">
                                <i class="fas fa-cog me-2"></i>Configure Webhooks
                            </button>
                        </p>
                    </div>
                </div>
            </section>
        </div>

        <div class="col-lg-4">
            <!-- Quick Test -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="fas fa-play-circle me-2"></i>Quick Test</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Test API endpoints directly from here:</p>
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-success" onclick="testCreateSession()">
                            <i class="fas fa-mobile-alt me-2"></i>Test Create Session
                        </button>
                        <button class="btn btn-outline-primary" onclick="testSendMessage()">
                            <i class="fas fa-paper-plane me-2"></i>Test Send Message
                        </button>
                        <button class="btn btn-outline-info" onclick="testWebhook()">
                            <i class="fas fa-webhook me-2"></i>Test Webhook
                        </button>
                    </div>
                </div>
            </div>

            <!-- Code Examples -->
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-code me-2"></i>Code Examples</h5>
                </div>
                <div class="card-body">
                    <div class="nav nav-pills nav-fill mb-3" role="tablist">
                        <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#js-example">JavaScript</button>
                        <button class="nav-link" data-bs-toggle="pill" data-bs-target="#python-example">Python</button>
                        <button class="nav-link" data-bs-toggle="pill" data-bs-target="#curl-example">cURL</button>
                    </div>
                    
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="js-example">
                            <pre class="bg-light p-3 rounded small"><code>const response = await fetch('/api/whatsapp/sessions/session_123/messages', {
  method: 'POST',
  headers: {
    'Authorization': 'Bearer YOUR_API_KEY',
    'Content-Type': 'application/json'
  },
  body: JSON.stringify({
    to: '+1234567890',
    message: 'Hello World!'
  })
});

const result = await response.json();</code></pre>
                        </div>
                        
                        <div class="tab-pane fade" id="python-example">
                            <pre class="bg-light p-3 rounded small"><code>import requests

url = "https://api.messingin.com/api/whatsapp/sessions/session_123/messages"
headers = {
    "Authorization": "Bearer YOUR_API_KEY",
    "Content-Type": "application/json"
}
data = {
    "to": "+1234567890",
    "message": "Hello World!"
}

response = requests.post(url, headers=headers, json=data)
print(response.json())</code></pre>
                        </div>
                        
                        <div class="tab-pane fade" id="curl-example">
                            <pre class="bg-dark text-light p-3 rounded small"><code>curl -X POST \
  -H "Authorization: Bearer YOUR_API_KEY" \
  -H "Content-Type: application/json" \
  -d '{"to":"+1234567890","message":"Hello World!"}' \
  https://api.messingin.com/api/whatsapp/sessions/session_123/messages</code></pre>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// API Documentation JavaScript Functions

function copyToClipboard(elementId) {
    const element = document.getElementById(elementId);
    const text = element.textContent;
    navigator.clipboard.writeText(text).then(() => {
        showSuccess('Copied to clipboard!');
    }).catch(() => {
        showError('Failed to copy to clipboard');
    });
}

function navigateToSection(sectionName) {
    // Navigate to different dashboard sections
    const navLink = document.querySelector(`[data-section="${sectionName}"]`);
    if (navLink) {
        navLink.click();
    }
}

async function testCreateSession() {
    try {
        showLoading('Testing session creation...');
        
        const response = await makeApiCall('/api/whatsapp/sessions', {
            method: 'POST',
            body: JSON.stringify({
                name: 'Test Session from API Docs'
            })
        });
        
        hideLoading();
        
        if (response && response.success) {
            showSuccess('Session created successfully! Check the Sessions tab to see your new session.');
        } else {
            throw new Error(response?.message || 'Failed to create session');
        }
    } catch (error) {
        hideLoading();
        showError('Test failed: ' + error.message);
    }
}

async function testSendMessage() {
    const phoneNumber = prompt('Enter phone number (with country code, e.g., +1234567890):');
    if (!phoneNumber) return;
    
    const message = prompt('Enter message to send:', 'Hello from API Docs test!');
    if (!message) return;
    
    // Get first available session
    try {
        showLoading('Getting available sessions...');
        
        const sessionsResponse = await makeApiCall('/api/whatsapp/sessions');
        
        if (!sessionsResponse?.success || !sessionsResponse.data?.length) {
            hideLoading();
            showError('No sessions available. Please create a session first.');
            return;
        }
        
        const session = sessionsResponse.data[0];
        
        showLoading('Sending test message...');
        
        const response = await makeApiCall(`/api/whatsapp/sessions/${session.sessionId}/messages`, {
            method: 'POST',
            body: JSON.stringify({
                to: phoneNumber,
                message: message
            })
        });
        
        hideLoading();
        
        if (response && response.success) {
            showSuccess('Message sent successfully!');
        } else {
            throw new Error(response?.message || 'Failed to send message');
        }
    } catch (error) {
        hideLoading();
        showError('Test failed: ' + error.message);
    }
}

async function testWebhook() {
    const webhookUrl = prompt('Enter webhook URL to test:', 'https://your-site.com/webhook');
    if (!webhookUrl) return;
    
    try {
        showLoading('Testing webhook...');
        
        const response = await makeApiCall('/api/webhooks/test-url', {
            method: 'POST',
            body: JSON.stringify({
                webhookUrl: webhookUrl
            })
        });
        
        hideLoading();
        
        if (response && response.success) {
            showSuccess(`Webhook test successful! Response time: ${response.data?.responseTime || 'N/A'}ms`);
        } else {
            throw new Error(response?.message || 'Webhook test failed');
        }
    } catch (error) {
        hideLoading();
        showError('Webhook test failed: ' + error.message);
    }
}

// Initialize API docs when loaded
document.addEventListener('DOMContentLoaded', function() {
    // Copy base URL button
    const copyBaseUrlBtn = document.getElementById('copy-base-url-btn');
    if (copyBaseUrlBtn) {
        copyBaseUrlBtn.addEventListener('click', () => {
            copyToClipboard('base-url');
        });
    }
    
    // Test API button
    const testApiBtn = document.getElementById('test-api-btn');
    if (testApiBtn) {
        testApiBtn.addEventListener('click', () => {
            testCreateSession();
        });
    }
});
</script>