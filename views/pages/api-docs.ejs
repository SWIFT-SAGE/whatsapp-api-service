<script>
// API Documentation JavaScript Functions

function copyToClipboard(elementId) {
    const element = document.getElementById(elementId);
    const text = element.textContent;
    navigator.clipboard.writeText(text).then(() => {
        showSuccess('Copied to clipboard!');
    }).catch(() => {
        showError('Failed to copy to clipboard');
    });
}

function navigateToSection(sectionName) {
    // Navigate to different dashboard sections
    const navLink = document.querySelector(`[data-section="${sectionName}"]`);
    if (navLink) {
        navLink.click();
    }
}

async function testCreateSession() {
    try {
        showLoading('Testing session creation...');
        
        const response = await makeApiCall('/api/whatsapp/sessions', {
            method: 'POST',
            body: JSON.stringify({
                name: 'Test Session from API Docs'
            })
        });
        
        hideLoading();
        
        if (response && response.success) {
            showSuccess('Session created successfully! Check the Sessions tab to see your new session.');
        } else {
            throw new Error(response?.message || 'Failed to create session');
        }
    } catch (error) {
        hideLoading();
        showError('Test failed: ' + error.message);
    }
}

async function testSendMessage() {
    const phoneNumber = prompt('Enter phone number (with country code, e.g., +1234567890):');
    if (!phoneNumber) return;
    
    const message = prompt('Enter message to send:', 'Hello from API Docs test!');
    if (!message) return;
    
    // Get first available session
    try {
        showLoading('Getting available sessions...');
        
        const sessionsResponse = await makeApiCall('/api/whatsapp/sessions');
        
        if (!sessionsResponse?.success || !sessionsResponse.data?.length) {
            hideLoading();
            showError('No sessions available. Please create a session first.');
            return;
        }
        
        const session = sessionsResponse.data[0];
        
        showLoading('Sending test message...');
        
        const response = await makeApiCall(`/api/whatsapp/sessions/${session.sessionId}/messages`, {
            method: 'POST',
            body: JSON.stringify({
                to: phoneNumber,
                message: message
            })
        });
        
        hideLoading();
        
        if (response && response.success) {
            showSuccess('Message sent successfully!');
        } else {
            throw new Error(response?.message || 'Failed to send message');
        }
    } catch (error) {
        hideLoading();
        showError('Test failed: ' + error.message);
    }
}

async function testWebhook() {
    const webhookUrl = prompt('Enter webhook URL to test:', 'https://your-site.com/webhook');
    if (!webhookUrl) return;
    
    try {
        showLoading('Testing webhook...');
        
        const response = await makeApiCall('/api/webhooks/test-url', {
            method: 'POST',
            body: JSON.stringify({
                webhookUrl: webhookUrl
            })
        });
        
        hideLoading();
        
        if (response && response.success) {
            showSuccess(`Webhook test successful! Response time: ${response.data?.responseTime || 'N/A'}ms`);
        } else {
            throw new Error(response?.message || 'Webhook test failed');
        }
    } catch (error) {
        hideLoading();
        showError('Webhook test failed: ' + error.message);
    }
}

// Initialize API docs when loaded
