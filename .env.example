# =============================================================================
# WhatsApp API Service - Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/whatsapp-api
MONGODB_DB_NAME=whatsapp_api

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-minimum-32-characters-long
JWT_REFRESH_EXPIRES_IN=30d

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:3000

# Email Configuration (SMTP) - REQUIRED for email verification
# For Gmail: Use App Password (not regular password)
# Steps to get Gmail App Password:
#   1. Enable 2-Factor Authentication on your Google account
#   2. Go to https://myaccount.google.com/apppasswords
#   3. Select app: "Mail" and device: "Other (Custom name)"
#   4. Enter name: "WhatsApp API Service" and click Generate
#   5. Copy the 16-character password and paste below
# For other providers: Use your SMTP credentials
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-char-app-password
SMTP_FROM=noreply@whatsapp-api.com
SMTP_SECURE=false
FROM_NAME=WhatsApp API Service

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./sessions
WHATSAPP_MAX_SESSIONS=10
WHATSAPP_SESSION_TIMEOUT=300000

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Too many requests, please try again later

# Security Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=false
HELMET_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=5

# Monitoring & Analytics
ANALYTICS_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Webhook Configuration
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_DOCS_ENABLED=true

# Performance Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
CACHE_TTL=3600

# External Services - Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# External Services - AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# External Services - Firebase (Push Notifications)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id

# Razorpay Configuration (Indian Payment Gateway)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_ENVIRONMENT=test
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Development Configuration
DEBUG=false
MOCK_WHATSAPP=false
