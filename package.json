{
  "name": "whatsapp-api-service",
  "version": "1.0.0",
  "description": "A production-ready WhatsApp API service built with Node.js, Express, TypeScript, and whatsapp-web.js. Features include session management, message handling, webhooks, analytics, rate limiting, and comprehensive monitoring.",
  "license": "MIT",
  "author": "Your Name <your.email@example.com>",
  "homepage": "https://github.com/yourusername/whatsapp-api-service#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/whatsapp-api-service.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/whatsapp-api-service/issues"
  },
  "keywords": [
    "whatsapp",
    "api",
    "nodejs",
    "express",
    "typescript",
    "whatsapp-web",
    "messaging",
    "webhook",
    "automation",
    "chatbot",
    "business-api",
    "rest-api"
  ],
  "type": "commonjs",
  "main": "dist/index.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist/**/*",
    "views/**/*",
    "public/**/*",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "lib": "dist",
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "build": "tsc",
    "build:clean": "rimraf dist && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "postinstall": "npm run build",
    "docker:build": "docker build -t whatsapp-api-service .",
    "docker:run": "docker run -p 3000:3000 whatsapp-api-service",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop whatsapp-api-service",
    "pm2:restart": "pm2 restart whatsapp-api-service",
    "pm2:logs": "pm2 logs whatsapp-api-service"
  },
  "dependencies": {

    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",

    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",

    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "puppeteer": "^21.1.1",
    "qrcode": "^1.5.3",

    "rate-limiter-flexible": "^7.3.0",

    "sharp": "^0.32.5",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0",
    "validator": "^13.11.0",
    "whatsapp-web.js": "^1.22.2",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^6.0.0",
    "@types/express-session": "^1.17.7",
    "@types/express-slow-down": "^1.3.5",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/mime-types": "^2.1.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.0",
    "@types/nodemailer": "^6.4.9",
    "@types/qrcode": "^1.5.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@types/validator": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
